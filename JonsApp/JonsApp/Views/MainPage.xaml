<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="JonsApp.Views.MainPage"
    Title="{Binding Title}"
    x:Name="mainPage"
    AutomationId="mainPage">
    <StackLayout
        HorizontalOptions="CenterAndExpand"
        VerticalOptions="CenterAndExpand">
        <Label
            x:Name="WelcomeLabel"
            AutomationId="WelcomeLabel"
            Text="Welcome to Xamarin Forms and Prism!" />
        <Button
            x:Name="AlertButton"
            AutomationId="AlertButton"
            Text="Show An Alert"
            Command="{Binding ShowAlertCommand}" />
    </StackLayout>
</ContentPage>